# =============================================================================
# ONYX Logging Configuration
# =============================================================================
# Structured JSON logging configuration for all services
# =============================================================================

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_TIMESTAMP=true

# Service-specific log levels
SUNA_LOG_LEVEL=info
ONYX_LOG_LEVEL=info
POSTGRES_LOG_LEVEL=warn
REDIS_LOG_LEVEL=notice
QDRANT_LOG_LEVEL=info
NGINX_LOG_LEVEL=warn

# Log destinations
LOG_DESTINATION=stdout  # stdout, file, both
LOG_FILE_PATH=/var/log/onyx/app.log
LOG_ROTATION=daily
LOG_RETENTION_DAYS=30

# Structured logging fields
LOG_INCLUDE_SERVICE_NAME=true
LOG_INCLUDE_TRACE_ID=true
LOG_INCLUDE_USER_ID=true
LOG_INCLUDE_REQUEST_ID=true

# Performance logging
LOG_SLOW_QUERIES=true
LOG_SLOW_QUERY_THRESHOLD_MS=1000
LOG_REQUEST_TIMING=true

# Security logging
LOG_AUTH_EVENTS=true
LOG_FAILED_AUTH_ATTEMPTS=true
LOG_API_ACCESS=true
LOG_SENSITIVE_OPERATIONS=true

# Error tracking
LOG_STACK_TRACES=true
LOG_ERROR_CONTEXT=true
SENTRY_DSN=your-sentry-dsn-here

# Audit logging
AUDIT_LOG_ENABLED=true
AUDIT_LOG_FORMAT=json
AUDIT_LOG_INCLUDE_IP=true
AUDIT_LOG_INCLUDE_USER_AGENT=true